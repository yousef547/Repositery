@model Product
@{
    ViewData["Title"] = "Update";
}

<form method="post" asp-action="Upsert">
    <div>
        <h2 class="text-primary">Update Product</h2>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" rows="3" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3 col-md-4">
                <label asp-for="Price10Plus"></label>
                <input asp-for="Price10Plus" class="form-control" />
                <span asp-validation-for="Price10Plus" class="text-danger"></span>
            </div>

            <div class="mb-3 col-md-4">
                <label asp-for="Price30Plus"></label>
                <input asp-for="Price30Plus" class="form-control" />
                <span asp-validation-for="Price30Plus" class="text-danger"></span>
            </div>

        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" asp-items="ViewBag.CatogeryList" class="form-control">
                    <option disabled selected>--Select Category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="mb-3 col-md-4">
                <label asp-for="BrandId"></label>
                <select asp-for="BrandId" asp-items="ViewBag.BrandList" class="form-control">
                    <option disabled selected>--Select Brand</option>
                </select>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary w-50 me-1">Update</button>
            <a asp-action="Index" class="btn btn-secondary w-50">
                <i class="bi bi-arrow-left-square"></i>Back to List
            </a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

